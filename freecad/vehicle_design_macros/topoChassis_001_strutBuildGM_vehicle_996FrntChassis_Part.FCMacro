def getStri(fixNdx):
		if fixNdx <= 9 :
			stri = '00' + str(fixNdx)
		elif fixNdx <= 99:
			stri = '0' + str(fixNdx)
		elif fixNdx <= 999:
			stri = str(fixNdx)
		return stri

